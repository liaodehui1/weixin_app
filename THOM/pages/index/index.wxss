.header{
  width: 100%;
  height: 240rpx;
  background-color: #1296db;
  box-sizing: border-box;
  padding: 0 10rpx;
}
.swiper{
  position: relative;
  width: 100%;
}
.swiper-img{
  width: 100%;
  border-radius: 16rpx;
  overflow: hidden;
}
.slide-image{
  width: 100%;
  height: 100%;
  display: inline-block;
}
.swiper-dots{
  position: absolute;
  /* width: calc(15rpx * 2 + 20rpx + 10rpx * 3 );
  height: 15rpx; */
  right: 20rpx;
  bottom: 10rpx;
  font-size: 0; /*默认基线对齐 在父容器外*/
}
.swiper-dots .dot{
  /* float: left; */
  display: inline-block;
  width: 15rpx;
  height: 15rpx;
  margin-right: 10rpx;
  border-radius: 50%;
  background-color: #aaa;
}
.swiper-dots .current{
  display: inline-block;
  width: 20rpx;
  height: 15rpx;
  margin-right: 10rpx;
  border-radius: 5rpx;
  background-color: #1296db;
}
.programas{
  position: relative;
  margin-top: 60rpx;
  width: 100%;
  height: 100rpx;
  display: flex;
  padding-top: 20rpx;
  justify-content: center;
}
.programa{
  height: 100%;
  flex: 1;
  text-align: center;
}
.programa-img{
  display: inline-block;
  width: 50rpx;
  height: 50rpx;
}
.programa-title{
  padding-top: 5rpx;
  display: block;
  font-size: 20rpx;
}