.header{
  height: 100rpx;
  box-sizing: border-box;
  padding: 6rpx 20rpx 0 10rpx;
  /* 不使用float */
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.avatar{
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  overflow: hidden;
}
.user{
  display: inline-block;
  margin-left: 20rpx;
}
.nickname{
  font-size: 30rpx;
  color: #000000;
  font-weight: 500;
  padding-right: 10rpx;
}
.date{
  display: block;
  margin-top: 8rpx;
  font-size: 20rpx;
}
.other{
  color: #aaaaaa;
  font-size: 20rpx;
}
.post_content{
  padding: 0 20rpx;
}
.title{
  display: block;
  margin-bottom: 10rpx;
  font-size: 32rpx;
  color: #000000;
  font-weight: 700;
}
.content{
  display: block;
  font-size: 26rpx;
  margin-bottom: 10rpx;
}
.comment{
  padding: 0 20rpx;
}
.comment_header{
  height: 60rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid rgba(0,0,0,0.09);
}
.theme{
  font-size: 32rpx;
  font-weight: 500;
}
.footer{
  position: fixed;
  bottom: 0;
  width: 100%;
  padding-bottom: 10rpx;
  background-color: #fff;
  height: 60rpx;
}
.items{
  display: flex;
}
.favorite,.transpond{
  flex: 1;
  padding-top: 6rpx;
  text-align: center;
  border-top: 2rpx solid #3399ff;
}
.discuss-box{
  flex: 0 0 120rpx;
}
.discuss{
  margin: 0 auto;
  height: 86rpx;
  width: 86rpx;
  background-color: #3399ff;
  border-radius: 50%;
  text-align: center;
  color: #fff;
  padding-top: 8rpx;
  box-sizing: border-box;
  transform: translateY(-50%);
}
.circle{
  position: absolute;
  width: 120rpx;
  height: 60rpx;
  border: 2rpx solid #3399ff;
  border-radius: 120rpx 120rpx 0 0;
  border-bottom: none;
  left: 50%;
  top: 0;
  transform: translate(-50%,-100%);
  background-color: #fff;
  z-index: -1;
}
.blur{
  filter: blur(10rpx);
}
.content-box{
  margin-top: 100rpx;
}
.box-header{
  display: flex;
  justify-content: center;
  height: 64rpx;
  align-items: center;
  margin-bottom: 40rpx;
}
.box-theme{
  font-size: 32rpx;
  color: #fff;
  margin: 0 20rpx;
}
/* ::before和::after只有在view中有用 要有content*/
.box-title::before,.box-title::after{
  content: '———————';
  display: inline-block;
  color: #fff;
}
.detail{
  color: #fff !important;
}
.upload-box{
  margin: 32rpx 0;
}
.close{
  position: absolute;
  bottom: 0;
  margin-bottom: 20rpx;
  text-align: center;
  width: 100%;
}
.btn{
  margin-top: 25rpx;
  height: 100rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
}